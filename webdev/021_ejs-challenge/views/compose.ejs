<%- include('partials/header.ejs'); -%>
<h1>Compose</h1>

    <form action="/compose" method = "post">
        <div class="form-group">
            <label for="ipostTitle">Title</label>
            <input type="text" class="form-control" name="postTitle" id="ipostTitle">
        </div>
        <div class="form-group">
            <label for="ipostBody">Post</label>
            <textarea class="form-control" name="postBody" id="ipostBody" rows="5"></textarea>
        </div>
        <button type="submit"  class="btn btn-primary">Publish</button>
    </form>

